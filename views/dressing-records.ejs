<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/static/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="/static/css/bootstrap-icons.css">
	<script src="/static/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  <style>
    .mt-10 {
      margin-top: 10px;
    }

    .pl-pr-5 {
      padding-left: 5px;
      padding-right: 5px;
    }
    body {
      padding-bottom: 200px;
    }
    input{
      overflow-y: visible;
    }
  </style>
  <script>
    function disableCaseNoInput() {
      if (document.getElementById('caseno').disabled) {
        document.getElementById('caseno').disabled = false;
        document.getElementById('caseno').value = "";
        document.getElementById('caseno').placeholder= "1234";
      } else {
        document.getElementById('caseno').disabled = true;
        document.getElementById('caseno').value = "";
        document.getElementById('caseno').placeholder = "B22-012345";
      }
    }
  </script>
  <title>
    <%= title %>
  </title>
</head>

<body>
    <div class="container">
        <%- include("./partials/header.ejs") %>
        <div class="DressingDetails">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Date</th>
                        <th scope="col">Qty of Pads</th>
                        <th scope="col">Total Amount</th>
                        <th scope="col">Discount</th>
                        <th scope="col">Amount Paid</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < DressingInfo.length ; i += 1) { %>
                        <tr>
                            <th scope="row"><%= i+1 %> </th>
                            <td><%= DressingInfo[i].Date.toLocaleDateString("en-UK") %> </td>
                            <td><%= DressingInfo[i].QtyOfPads %> </td>
                            <td><%= DressingInfo[i].TotalAmount %> </td>
                            <% if(DressingInfo[i].DiscountOption != null) { %> 
                              <td><%= DressingInfo[i].AmountReduction %> (<%= DressingInfo[i].DiscountOption %>)</td>
                            <% } else { %> 
                              <td><%= DressingInfo[i].AmountReduction %></td>
                            <% } %> 
                            <td><%= DressingInfo[i].AmountPaid %> </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>